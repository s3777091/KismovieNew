            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h2 class="details__title">Có thể bạn thích</h2>
                    </div>
                    <% if (movieRelated.length > 0) { %>
                    <% movieRelated.slice(0,4).map(mv => {
          %>
                    <!-- card -->
                    <div class="col-6 col-sm-4 col-lg-4 col-xl-3">
                        <div class="card">
