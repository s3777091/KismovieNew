<div class="wrap-player">
    <div class="col-12">
        <!-- sections -->
        <%- include('./sections/movie/video.ejs'); %>
        <section class="">
            <div class="container">
                <div class="row">
                    <div class="fb-comments col-12 commentsdark mt-4"
                        :data-href="https://www.facebook.com/profile.php?id=100016099751844&sk=archive" data-numposts="10"
                        data-width="100%"></div>
                </div>
            </div>
